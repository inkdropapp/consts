export class AssistiveError extends Error {
  detail: string
  debugInfo: Object

  constructor (opts: { message: string, detail: string, debugInfo: Object }) {
    const { message, detail, debugInfo } = opts
    super(message)
    this.name = 'AssistiveError'
    this.detail = detail
    this.debugInfo = debugInfo
  }
}
